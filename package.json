{
  "name": "@releaseband/markdownlint-config",
  "version": "0.0.0-semantic-release",
  "description": "markdownlint shareable config",
  "author": "releaseband",
  "license": "MIT",
  "main": ".markdownlint.json",
  "scripts": {
    "commit": "cz",
    "prettier": "prettier . --write --ignore-unknown --ignore-path ./.gitignore",
    "lint": "eslint . --ext .js --fix --ignore-path ./.gitignore",
    "markdownlint": "markdownlint '**/*.md' --fix"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.1.0",
    "@commitlint/cz-commitlint": "^16.1.0",
    "@releaseband/commitlint-config": "^0.3.1",
    "@releaseband/eslint-config": "^0.2.0",
    "@releaseband/lint-staged-config": "^0.2.1",
    "@releaseband/prettier-config": "^0.2.0",
    "@releaseband/semantic-release-npm-github-config": "^1.0.0",
    "commitizen": "^4.2.4",
    "eslint": "^8.8.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-sonarjs": "^0.11.0",
    "lint-staged": "^11.2.6",
    "markdownlint-cli": "^0.30.0",
    "prettier": "^2.5.1"
  },
  "peerDependencies": {
    "markdownlint-cli": "^0.30.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    ".markdownlint.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/releaseband/markdownlint-config.git"
  },
  "bugs": {
    "url": "https://github.com/releaseband/markdownlint-config/issues"
  },
  "homepage": "https://github.com/releaseband/markdownlint-config#readme",
  "keywords": [
    "markdownlint",
    "markdownlint-config"
  ]
}
